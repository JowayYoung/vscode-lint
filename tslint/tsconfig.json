{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"jsx": "preserve",
		"lib": [
			"dom",
			"es2015",
			"es2016",
			"es2017",
			"es2018",
			"es2019",
			"es2020",
			"es2021",
			"esnext"
		],
		"module": "es6",
		"moduleResolution": "node",
		"removeComments": true,
		"paths": {
			"#/*": ["*"],
			"@/*": ["src/*"]
		},
		"sourceMap": true,
		"strict": true,
		"target": "es6",
		"typeRoots": [
			"node_modules/@types",
			"typings"
		]
	},
	"exclude": [
		"node_modules"
	]
}